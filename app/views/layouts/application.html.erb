<!DOCTYPE html>
<html>
  <head>
    <title>Niftyapp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag '//cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.min.css' %>
  </head>

  <body>
    <%= yield %>

    <%= javascript_include_tag '//code.jquery.com/jquery-3.6.0.min.js', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag '//cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </body>
</html>
