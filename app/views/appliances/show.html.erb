      <div class=""><button type="button" class="btn btn-secondary mx-2"><%= link_to root_path do %><span style="color: #000000;">Back to your appliances</span><% end %></button></div>
      <div class=""></div>
    </div>
  </div>
  <div class="card card-xl-stretch mb-xl-8">
